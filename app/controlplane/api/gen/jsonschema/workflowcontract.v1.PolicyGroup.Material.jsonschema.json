{
  "$id": "workflowcontract.v1.PolicyGroup.Material.jsonschema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Policy group materials",
  "properties": {
    "name": {
      "description": "Free form name, as we support placeholders eg `{{ inputs.input_name }}`\n If no name is provided, material won't be enforced and will apply policies if `type` matches",
      "type": "string"
    },
    "optional": {
      "type": "boolean"
    },
    "policies": {
      "description": "Policies to be applied to this material",
      "items": {
        "$ref": "workflowcontract.v1.PolicyAttachment.jsonschema.json"
      },
      "type": "array"
    },
    "type": {
      "anyOf": [
        {
          "enum": [
            "MATERIAL_TYPE_UNSPECIFIED",
            "STRING",
            "CONTAINER_IMAGE",
            "ARTIFACT",
            "SBOM_CYCLONEDX_JSON",
            "SBOM_SPDX_JSON",
            "JUNIT_XML",
            "OPENVEX",
            "HELM_CHART",
            "SARIF",
            "EVIDENCE",
            "ATTESTATION",
            "CSAF_VEX",
            "CSAF_INFORMATIONAL_ADVISORY",
            "CSAF_SECURITY_ADVISORY",
            "CSAF_SECURITY_INCIDENT_RESPONSE",
            "GITLAB_SECURITY_REPORT",
            "ZAP_DAST_ZIP",
            "BLACKDUCK_SCA_JSON",
            "TWISTCLI_SCAN_JSON",
            "GHAS_CODE_SCAN",
            "GHAS_SECRET_SCAN",
            "GHAS_DEPENDENCY_SCAN"
          ],
          "title": "Material Type",
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ]
    }
  },
  "title": "Material",
  "type": "object"
}
