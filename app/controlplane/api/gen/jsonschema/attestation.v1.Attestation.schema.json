{
  "$id": "attestation.v1.Attestation.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "patternProperties": {
    "^(blockOnPolicyViolation)$": {
      "description": "fail the attestation if policy evaluation fails",
      "type": "boolean"
    },
    "^(bypassPolicyCheck)$": {
      "description": "bypass policy check",
      "type": "boolean"
    },
    "^(casBackend)$": {
      "$ref": "attestation.v1.Attestation.CASBackend.schema.json",
      "description": "CAS backend information used during attestation"
    },
    "^(envVars)$": {
      "additionalProperties": {
        "type": "string"
      },
      "description": "List of env variables",
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "^(finishedAt)$": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "^(initializedAt)$": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "^(policiesAllowedHostnames)$": {
      "description": "array of hostnames that are allowed to be used in the policies",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "^(policyEvaluations)$": {
      "description": "Policies that materials in this attestation were validated against",
      "items": {
        "$ref": "attestation.v1.PolicyEvaluation.schema.json"
      },
      "type": "array"
    },
    "^(runnerEnvironment)$": {
      "$ref": "attestation.v1.RunnerEnvironment.schema.json",
      "description": "Runner environment in which the attestation was crafted"
    },
    "^(runnerType)$": {
      "anyOf": [
        {
          "enum": [
            "RUNNER_TYPE_UNSPECIFIED",
            "GITHUB_ACTION",
            "GITLAB_PIPELINE",
            "AZURE_PIPELINE",
            "JENKINS_JOB",
            "CIRCLECI_BUILD",
            "DAGGER_PIPELINE",
            "TEAMCITY_PIPELINE"
          ],
          "title": "Runner Type",
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ]
    },
    "^(runnerUrl)$": {
      "type": "string"
    },
    "^(signingOptions)$": {
      "$ref": "attestation.v1.Attestation.SigningOptions.schema.json",
      "description": "Signing options"
    }
  },
  "properties": {
    "annotations": {
      "additionalProperties": {
        "minLength": 1,
        "type": "string"
      },
      "description": "Annotations for the attestation",
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "auth": {
      "$ref": "attestation.v1.Attestation.Auth.schema.json",
      "description": "Authentication information used during attestation"
    },
    "block_on_policy_violation": {
      "description": "fail the attestation if policy evaluation fails",
      "type": "boolean"
    },
    "bypass_policy_check": {
      "description": "bypass policy check",
      "type": "boolean"
    },
    "cas_backend": {
      "$ref": "attestation.v1.Attestation.CASBackend.schema.json",
      "description": "CAS backend information used during attestation"
    },
    "env_vars": {
      "additionalProperties": {
        "type": "string"
      },
      "description": "List of env variables",
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "finished_at": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "head": {
      "$ref": "attestation.v1.Commit.schema.json",
      "description": "Head Commit of the environment where the attestation was executed (optional)"
    },
    "initialized_at": {
      "$ref": "google.protobuf.Timestamp.schema.json"
    },
    "materials": {
      "additionalProperties": {
        "$ref": "attestation.v1.Attestation.Material.schema.json"
      },
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "policies_allowed_hostnames": {
      "description": "array of hostnames that are allowed to be used in the policies",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "policy_evaluations": {
      "description": "Policies that materials in this attestation were validated against",
      "items": {
        "$ref": "attestation.v1.PolicyEvaluation.schema.json"
      },
      "type": "array"
    },
    "runner_environment": {
      "$ref": "attestation.v1.RunnerEnvironment.schema.json",
      "description": "Runner environment in which the attestation was crafted"
    },
    "runner_type": {
      "anyOf": [
        {
          "enum": [
            "RUNNER_TYPE_UNSPECIFIED",
            "GITHUB_ACTION",
            "GITLAB_PIPELINE",
            "AZURE_PIPELINE",
            "JENKINS_JOB",
            "CIRCLECI_BUILD",
            "DAGGER_PIPELINE",
            "TEAMCITY_PIPELINE"
          ],
          "title": "Runner Type",
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ]
    },
    "runner_url": {
      "type": "string"
    },
    "signing_options": {
      "$ref": "attestation.v1.Attestation.SigningOptions.schema.json",
      "description": "Signing options"
    },
    "workflow": {
      "$ref": "attestation.v1.WorkflowMetadata.schema.json"
    }
  },
  "required": [
    "initialized_at",
    "workflow"
  ],
  "title": "Attestation",
  "type": "object"
}
